<Window x:Class="PrintHero.UI.Views.FolderSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hot Folder Settings" 
        Height="600" 
        Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Control Style -->
        <Style x:Key="InputControlStyle" TargetType="Control">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource InputControlStyle}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Main Card -->
    <Border Background="White" 
            CornerRadius="15" 
            Margin="20" 
            Padding="40">
        <Border.Effect>
            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Hot Folder Settings" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"/>
                <Rectangle Height="2" 
                           Fill="#4CAF50" 
                           Width="120" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Monitor Folder Section -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="📁 Monitor Folder" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Monitor Folder:" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,8"
                                               Foreground="#555555"/>
                                    <TextBox x:Name="FolderPathTextBox" 
                                             Style="{StaticResource TextBoxStyle}"
                                             Text="C:\PrintHero\Input"
                                             IsReadOnly="True"
                                             Margin="0,0,15,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="📂 Browse..."
                                        Style="{StaticResource DialogButtonStyle}"
                                        Background="#2196F3"
                                        Width="120"
                                        Height="40"
                                        VerticalAlignment="Bottom"
                                        Click="Browse_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- File Pattern Section -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="📄 File Pattern" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="File Pattern:" 
                                       FontWeight="Medium" 
                                       Margin="0,0,0,8"
                                       Foreground="#555555"/>
                            <TextBox x:Name="FilePatternTextBox" 
                                     Style="{StaticResource TextBoxStyle}"
                                     Text="*.pdf"/>
                        </StackPanel>
                    </Border>

                    <!-- Options Section -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="⚙️ Options" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <CheckBox x:Name="IncludeSubfoldersCheckBox"
                                      Content="Include Subfolders"
                                      Style="{StaticResource CheckBoxStyle}"/>

                            <CheckBox x:Name="DeleteAfterPrintingCheckBox"
                                      Content="Delete files after printing"
                                      Style="{StaticResource CheckBoxStyle}"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,30,0,0">

                <Button Content="↩️ Cancel" 
                        Style="{StaticResource DialogButtonStyle}"
                        Background="#757575"
                        Width="100"
                        Margin="0,0,15,0"
                        Click="Cancel_Click"/>

                <Button Content="💾 Save" 
                        Style="{StaticResource DialogButtonStyle}"
                        Background="#4CAF50"
                        Width="140"
                        Click="Save_Click" Height="35"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>