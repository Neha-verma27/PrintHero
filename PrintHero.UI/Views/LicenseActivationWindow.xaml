<Window x:Class="PrintHero.UI.Views.LicenseActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Activation" 
        Height="350" 
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Border Background="White" CornerRadius="10" Margin="20" Padding="30">
        <Border.Effect>
            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="License Activation" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"/>
                <Rectangle Height="2" 
                           Fill="#4CAF50" 
                           Width="80" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- License Content -->
            <StackPanel Grid.Row="1">
                <!-- License Key Input -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="License Key:" FontWeight="Medium" Margin="0,0,0,8"/>
                    <TextBox x:Name="LicenseKeyTextBox" 
                             Height="40" 
                             FontSize="16"
                             Background="White"
                             BorderBrush="#CCCCCC"
                             BorderThickness="2"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             MaxLength="19"
                             CharacterCasing="Upper"
                             FontFamily="Consolas"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel>
                    <TextBlock Text="Status:" FontWeight="Medium" Margin="0,0,0,8"/>
                    <Border Background="#F8F9FA" 
                            CornerRadius="5" 
                            Padding="15,10">
                        <TextBlock x:Name="StatusTextBlock" 
                                   Text="Enter your license key" 
                                   FontSize="14"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,30,0,0">
                <Button Content="Cancel" 
                        Background="#757575"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        Margin="0,0,15,0"
                        Click="Cancel_Click"/>
                <Button Content="Activate License" 
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        Click="Activate_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>