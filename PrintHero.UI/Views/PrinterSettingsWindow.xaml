<Window x:Class="PrintHero.UI.Views.PrinterSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Printer Settings" 
        Height="700" 
        Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Control Style -->
        <Style x:Key="InputControlStyle" TargetType="Control">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource InputControlStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Name="ContentSite"
                                                      Grid.Column="0"
                                                      IsHitTestVisible="False"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="10,0,0,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>
                                    <ToggleButton Name="ToggleButton"
                                                  Grid.Column="1"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Width="30">
                                        <Path Fill="#666666" 
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#DDDDDD"
                                            CornerRadius="6">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Card -->
    <Border Background="White" 
            CornerRadius="15" 
            Margin="20" 
            Padding="40">
        <Border.Effect>
            <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Printer Settings" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#333333"
                           HorizontalAlignment="Center"/>
                <Rectangle Height="2" 
                           Fill="#4CAF50" 
                           Width="100" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Printer Selection Section -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="🖨️ Printer Selection" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Select Default Printer:" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,8"
                                               Foreground="#555555"/>
                                    <ComboBox x:Name="PrinterComboBox" 
                                              Style="{StaticResource ComboBoxStyle}"/>

                                    <TextBlock x:Name="PrinterStatusText"
                                               Text="Status: Ready"
                                               FontSize="12"
                                               Foreground="#4CAF50"
                                               Margin="0,8,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="🔄 Refresh"
                                        Style="{StaticResource DialogButtonStyle}"
                                        Background="#2196F3"
                                        Width="100"
                                        Height="40"
                                        VerticalAlignment="Center"
                                        Margin="10,0,5,0"
                                        Click="RefreshPrinters_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Print Quality Section -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="⚙️ Print Quality &amp; Options" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333"
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Left Column -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <!-- Paper Size -->
                                    <TextBlock Text="Paper Size:" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,8"
                                               Foreground="#555555"/>
                                    <ComboBox x:Name="PaperSizeComboBox" 
                                              Style="{StaticResource ComboBoxStyle}"
                                              Margin="0,0,0,15">
                                        <ComboBoxItem Content="A4 (210 × 297 mm)" IsSelected="True"/>
                                        <ComboBoxItem Content="Letter (8.5 × 11 in)"/>
                                        <ComboBoxItem Content="A3 (297 × 420 mm)"/>
                                        <ComboBoxItem Content="Legal (8.5 × 14 in)"/>
                                        <ComboBoxItem Content="A5 (148 × 210 mm)"/>
                                    </ComboBox>

                                    <!-- Print Quality -->
                                </StackPanel>

                                <!-- Right Column -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">

                                    <!-- Orientation -->
                                    <TextBlock Text="Orientation:" 
                                               FontWeight="Medium" 
                                               Margin="0,0,0,8"
                                               Foreground="#555555"/>
                                    <ComboBox x:Name="OrientationComboBox" 
                                              Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="📄 Portrait" IsSelected="True"/>
                                        <ComboBoxItem Content="📃 Landscape"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Advanced Options Section -->

                    <!-- Preview Section -->

                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,30,0,0">

                <Button Content="🖨️ Test Print" 
                        Style="{StaticResource DialogButtonStyle}"
                        Background="#FF9800"
                        Width="120"
                        Margin="0,0,15,0"
                        Click="TestPrint_Click"/>

                <Button Content="↩️ Cancel" 
                        Style="{StaticResource DialogButtonStyle}"
                        Background="#757575"
                        Width="100"
                        Padding="20,10"
                        Margin="0,0,15,0"
                        Click="Cancel_Click"/>

                <Button Content="💾 Save Settings" 
                        Style="{StaticResource DialogButtonStyle}"
                        Background="#4CAF50"
                        Width="140"
                        Padding="20,10"
                        Click="Save_Click" Height="35"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>